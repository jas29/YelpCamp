<% include partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
				<h1>Welcome to YelpCamp</h1>
			<p>View our hand-picked camp grounds from all over the world</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Campground</a>
		</p>
		</div>
	
</header>



<div class="row" style="display:flex; flex-wrap:wrap;">
	<% for (var i = 0; i < campgrounds.length; i++) { -%>
	<div class="col-md-3 col-sm-6">
		<div class="thumbnail">
		<img class="img-responsive" src="<%= campgrounds[i].image %>">
		<div class="caption text-center">
			<h4> <%= campgrounds[i].name %> </h4>
			<p>
				<a class="btn btn-primary" href="/campgrounds/<%= campgrounds[i]._id %>">More Info</a>
			</p>
		</div>
		</div>
	</div>
	
<% } -%>
</div>

</div>

<% include partials/footer %>